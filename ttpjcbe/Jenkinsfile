pipeline {
    agent any
    
    environment {
        PROMETHEUS_CONTAINER_NAME = 'prometheus'
        PROMETHEUS_PORT = '9090'
        PROMETHEUS_CONFIG_PATH = '/path/to/prometheus.yml/prometheus.yml' // Update with your correct path
        PROMETHEUS_IMAGE = 'prom/prometheus'
    }

    stages {
        stage('Clean up Existing Prometheus Container') {
            steps {
                script {
                    // Check if the Prometheus container already exists and remove it if it does
                    sh """
                    if [ \$(docker ps -a -q -f name=\$PROMETHEUS_CONTAINER_NAME) ]; then
                        docker stop \$PROMETHEUS_CONTAINER_NAME || true
                        docker rm \$PROMETHEUS_CONTAINER_NAME || true
                    fi
                    """
                }
            }
        }

        stage('Run Prometheus Container') {
            steps {
                script {
                    // Run the Prometheus container with the specified config file
                    sh """
                    docker run -d --name \$PROMETHEUS_CONTAINER_NAME \\
                        -p \$PROMETHEUS_PORT:\$PROMETHEUS_PORT \\
                        -v \$PROMETHEUS_CONFIG_PATH:/etc/prometheus/prometheus.yml \\
                        \$PROMETHEUS_IMAGE
                    """
                }
            }
        }
    }

    post {
        always {
            script {
                // Ensure the Prometheus container is running and print its status
                sh 'docker ps -f name=\$PROMETHEUS_CONTAINER_NAME'
            }
        }
    }
}
